{
  "name": "examples",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "prettier": "prettier --write \"./*/src/**/*.{ts,tsx,md}\"",
    "test": "prettier --list-different \"./*/src/**/*.{ts,tsx,md}\"",
    "precommit": "pretty-quick --staged"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "renovate": {
    "extends": ["config:base"],
    "automerge": true,
    "major": {
      "automerge": false
    }
  },
  "devDependencies": {
    "husky": "0.14.3",
    "prettier": "1.11.0",
    "pretty-quick": "1.4.1"
  }
}
